<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/colorPrimary"
    tools:context="com.cmpe277.yaminimuralidharen.implicitintentassignment.MainActivity">

    <ImageView
        android:id="@+id/imgview1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/sjsu_logo"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Implicit intents"
        android:textColor="#000"
        android:layout_toRightOf="@+id/imgview1"
        android:layout_centerHorizontal="false"
        android:textSize="25sp"
        android:paddingLeft="20dp"
        />
    <TextView
        android:id="@+id/urltextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgview1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="URL:"

   />

    <EditText
        android:id="@+id/urledittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/urltextview"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/imgview1"
        />
        <Button
        android:id="@+id/urllaunchbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch"
        android:textColor="#fff"
        android:layout_below="@+id/urltextview"
        android:background="#000000"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        />

       <TextView
        android:id="@+id/phonetextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/urllaunchbutton"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="Phone:"
        />

        <EditText
        android:id="@+id/phoneedittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:layout_toRightOf="@+id/phonetextview"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/urllaunchbutton"
        />

      <Button
        android:id="@+id/callaunchbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ring"
        android:textColor="#fff"
        android:layout_below="@+id/phoneedittext"
        android:background="#000000"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/closeapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close App"
        android:textColor="#fff"
        android:layout_below="@+id/callaunchbutton"
        android:background="#000000"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:onClick="closeApp"
        />



</RelativeLayout>
